<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRCodeGenerator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!--        <item name="android:textColor">@color/colorBlack10</item>-->
        <item name="android:textColorHint">@color/purple_500</item>
        <!--        <item name="android:textSize">@dimen/_11ssp</item>-->
        <item name="android:colorControlActivated">@color/purple_500</item>
        <item name="android:colorControlNormal">@color/purple_500</item>
        <item name="android:colorControlHighlight">@color/purple_500</item>
        <item name="android:textColorHighlight">@color/purple_500</item>
        <item name="boxBackgroundColor">@color/colorTransparent</item>

    </style>

    <style name="EditInputText">
        <item name="android:textColor">@color/colorBlack10</item>
        <item name="android:textColorHint">@color/colorBlack10</item>
        <!--        <item name="android:textSize">@dimen/_11ssp</item>-->
        <item name="android:paddingStart">@dimen/_6sdp</item>
        <item name="android:paddingEnd">@dimen/_6sdp</item>
        <!--        <item name="android:background">@color/colorTransparent</item>-->
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/ripple_effect_button</item>
        <!--        <item name="android:textSize">@dimen/_10ssp</item>-->
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginStart">@dimen/_36sdp</item>
        <item name="android:layout_marginEnd">@dimen/_36sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/_38sdp</item>

    </style>

    <style name="Theme.QRCodeGenerator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QRCodeGenerator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.QRCodeGenerator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>